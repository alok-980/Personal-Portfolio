<% layout("/layouts/boilerplate.ejs") %>
<link rel="stylesheet" href="/css/new/newEducation.css">

<div class="container">
    <h1>Add New Education</h1>
    <form action="/education" method="POST" class="education-form">
        <div class="form-group">
            <label for="icon">Icon Link:</label>
            <input type="text" id="icon" name="education[icon]" placeholder="Enter icon link (optional)">
        </div>
        <div class="form-group">
            <label for="qualification">Qualification:</label>
            <input type="text" id="qualification" name="education[qualification]" required>
        </div>
        <div class="form-group start-end">
            <div>
                <label for="startYear">Start Year:</label>
                <input type="text" id="startYear" name="education[startYear]" required>
            </div>
            <div>
                <label for="endYear">End Year:</label>
                <input type="text" id="endYear" name="education[endYear]" required>
            </div>
        </div>
        <div class="form-group">
            <label for="institution">Institution:</label>
            <input type="text" id="institution" name="education[institution]" required>
        </div>
        <div class="form-group">
            <label for="grade">Grade:</label>
            <input type="text" id="grade" name="education[grade]">
        </div>
        <button type="submit" class="submit-btn">Add Education</button>
        <a href="/education" class="cancel-link">Cancel</a>
    </form>
</div>
