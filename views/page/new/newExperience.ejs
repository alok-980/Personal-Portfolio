<% layout("layouts/boilerplate.ejs") %>
<link rel="stylesheet" href="/css/new/newExperience.css">

<section class="new-experience-intro">
    <h1>Add New Experience</h1>
    <p>Fill out the form below to add your professional experience:</p>
</section>

<section class="new-experience-form">
    <form action="/experience" method="POST" class="form-container">
        <div class="form-group">
            <label for="title">Job Title</label>
            <input type="text" id="title" name="experience[title]" required>
        </div>
        <div class="form-group">
            <label for="subtitle">Company Name</label>
            <input type="text" id="subtitle" name="experience[subtitle]">
        </div>
        <div class="form-group">
            <label for="startYear">Start Year</label>
            <input type="text" id="startYear" name="experience[startYear]" required>
        </div>
        <div class="form-group">
            <label for="endYear">End Year</label>
            <input type="text" id="endYear" name="experience[endYear]" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="experience[description]" rows="4" required></textarea>
        </div>
        <button type="submit" class="submit-btn">Add Experience</button>
        &nbsp;
        <a href="/experience">Cancel</a>
    </form>
</section>
